@model SV20T1080029.Web.Models.PaginationSearchProductOutput
@{
    Layout = null;
}
<p style="padding:10px ; background-color:#fff; margin:0px">
    Có <strong>@string.Format("{0:N0}" , Model.RowCount)</strong> mặt hàng. Hiện đang ở trang <strong>@Model.Page</strong> trên tổng số <strong>@Model.PageCount</strong> trang
</p>


<div class="table-responsive">
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr class="bg-primary">
                <th style="width:80px">Ảnh</th>
                <th>Tên mặt hàng</th>
                <th>Đơn vị tính</th>
                <th>Giá</th>
                <th style="width:75px">&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>
                        <img src="~/images/products/@item.Photo" style="width:80px" />
                    </td>
                    <td style="vertical-align:middle">@item.ProductName</td>
                    <td style="vertical-align:middle">@item.Unit</td>
                    <td style="vertical-align:middle">@item.Price</td>
                    <td class="text-right" style="vertical-align:middle">
                        <a href="~/Admin/Product/Edit/@item.ProductID" class="btn btn-xs btn-flat btn-info">
                            <i class="fa fa-edit"></i>
                        </a>
                        <a href="~/Admin/Product/Delete/@item.ProductID" class="btn btn-xs btn-flat btn-danger">
                            <i class="fa fa-remove"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="text-center">
    <div class="dataTables_paginate paging_simple_numbers" id="example2_paginate">
        <ul class="pagination">
            @if (Model.Page > 1)
            {
                <li class="paginate_button previous" id="example2_previous">
                    <a href="~/Admin/Product?page=@(Model.Page - 1)&searchValue=@Model.SearchValue" aria-controls="example2" data-dt-idx="0" tabindex="0">Previous</a>
                </li>
            }
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                if (i == Model.Page)
                {
                    <li class="paginate_button active">
                        <a href="#" aria-controls="example2" data-dt-idx="@i" tabindex="0">@i</a>
                    </li>
                }
                else if (i <= 4 || i > Model.PageCount - 4 || (i >= Model.Page - 2 && i <= Model.Page + 2))
                {
                    <li class="page_link">
                        <a href="javascript:;" onclick="doSearch(@i)" aria-controls="example2" data-dt-idx="" tabindex="@i">@i</a>
                    </li>
                }
                else if (i == Model.Page - 4 || i == Model.Page + 4)
                {
                    <li class="paginate_button">
                        <a href="#" aria-controls="example2" data-dt-idx="" tabindex="0">...</a>
                    </li>
                }
            }
            @if (Model.Page < Model.PageCount)
            {
                <li class="paginate_button next" id="example2_next">
                    <a href="~/Admin/Product?page=@(Model.Page + 1)&searchValue=@Model.SearchValue" aria-controls="example2" data-dt-idx="" tabindex="0">Next</a>
                </li>
            }
        </ul>
    </div>
</div>