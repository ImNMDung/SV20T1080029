@using SV20T1080029.Web;
@model SV20T1080029.DomainModels.Customer



<div class="box box-primary">
    <div class=" box-body">
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="alert alert-warning">
                <p>@ViewBag.ErrorMessage</p>
            </div>
        }

        <form method="post" action="~/Admin/Customer/Save">
            @Html.HiddenFor(m => m.CustomerID)
          @*  <input class="hidden" name="CustomerID" value="@Model.CustomerID" /> *@
            <div class="form-group">
                <label for="">Tên khách hàng:</label>
                @Html.TextBoxFor(m => m.CustomerName, new {@class="form-control", @autofocus = "autofocus"})
                @Html.ValidationMessageFor(m => m.CustomerName,"*" ,new {@style="color:#f00"})
              @*   <input type="text" class="form-control" id="" autofocus name="CustomerName" value="@Model.CustomerName"> *@
            </div>

            <div class="form-group">
               
                <label for="">Tên giao dịch:</label>
                @Html.TextBoxFor(m => m.ContactName, new {@class="form-control"})
                @Html.ValidationMessageFor(m => m.ContactName,"" ,new {@style="color:#f00"})
               @*  <input type="text" class="form-control" id="" name="ContactName" value="@Model.ContactName"> *@
            </div>

            <div class="form-group">
                <label for="">Tỉnh/ Thành phố:</label>
               @*  <select class="form-control" name="Province" value="@Model.Province">
                    <option value="">-- Chọn tỉnh/thành </option>
                    @foreach (var item in SV20T1080029.BusinessLayers.CommonDataService.ListOfProvinces())
                    {
                        if (item.ProvinceName == Model.Province)
                        {
                            <option value="@item.ProvinceName" selected>@item.ProvinceName</option>
                        }
                        else
                        {
                            <option value="@item.ProvinceName">@item.ProvinceName</option>
                        }
                    }
                </select>
 *@

                @Html.DropDownListFor(m => m.Province,SelectListHelper.Province(),new {@class="form-control"})
                @Html.ValidationMessageFor(m => m.Province,"*" ,new {@style="color:#f00"})

            </div>
            <div class="form-group">
                <label for="">Địa chỉ:</label>
                @Html.TextBoxFor(m => m.Address, new {@class="form-control"})
                @Html.ValidationMessageFor(m => m.Address,"*" ,new {@style="color:#f00"})
             @*    <input type="text" class="form-control" id="" name="Address" value="@Model.Address"> *@
            </div>

            <div class="form-group">
                <label for="">Số điện thoại:</label>
                @Html.TextBoxFor(m => m.Phone, new {@class="form-control"})
                @Html.ValidationMessageFor(m => m.Phone,"*" ,new {@style="color:#f00"})
               @*  <input type="number" class="form-control" id="" name="Phone" value="@Model.Phone"> *@
            </div>

            <div class="form-group">
                <label for="email">Email:</label>
                @Html.TextBoxFor(m => m.Email, new {@class="form-control"})
                @Html.ValidationMessageFor(m => m.Email,"*" ,new {@style="color:#f00"})
               @*  <input type="email" class="form-control" id="" name="Email" value="@Model.Email"> *@
            </div>

         @*    @Html.ValidationSummary("",new {@style="color:=f00"}) *@
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-fw fa-save"></i>
                Lưu dữ liệu
            </button>

            <button type="submit" class="btn">
                <a href="~/Admin/Customer">
                    <i class="fa fa-fw fa-arrow-left"></i>
                    Quay lại
                </a>
            </button>

        </form>
    </div>
</div>