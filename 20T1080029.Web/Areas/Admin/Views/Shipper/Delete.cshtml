@model SV20T1080029.DomainModels.Shipper
@{
    ViewBag.Title = "Xóa người giao hàng";
}

<div class="box box-danger">
    <div class=" box-body">
        <form action="~/Admin/Shipper/Delete/@Model.ShipperID" method="post">
            <div class="form-group">
                <label class="control-label col-sm-2">Tên Shipper:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.ShipperName</p>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2">Số điện thoại :</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@Model.Phone</p>
                </div>
            </div>

            <button type="submit" class="btn btn-danger">
                <i class="fa fa-fw fa-times"></i>
                Xóa dữ liệu
            </button>

            <button type="submit" class="btn text-danger">
                <a href="~/Admin/Shipper">
                    <i class="fa fa-fw fa-arrow-left"></i>
                    Quay lại
                </a>
            </button>

        </form>
    </div>
</div>
