@using SV20T1080029.DomainModels;
@model SV20T1080029.DomainModels.OrderDetail
@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <form action="~/Admin/Order/UpdateDetail" method="post" class="form-horizontal">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Cập nhật chi tiết đơn hàng</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <input type="hidden" name="OrderDetailID" value="@Model.OrderDetailID" />
                    <input type="hidden" name="id" value="@Model.OrderID" />
                    <input type="hidden" name="productId" value="@Model.ProductID" />
                    <label class="control-label col-sm-3">Tên mặt hàng:</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" value="@Model.ProductName" name="ProductName" autofocus>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3">Đơn vị tính:</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" value="@Model.Unit" name="Unit">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3">Số lượng:</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" value="@Model.Quantity" name="quantity">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3">Giá bán:</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" value="@Model.SalePrice" name="salePrice">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i> Cập nhật
                </button>
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    Bỏ qua
                </button>
            </div>
        </form>
    </div>
</div>

