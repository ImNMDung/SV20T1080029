@model SV20T1080029.Web.Models.ViewOrder
@{
    ViewBag.Title = "Quản lý đơn hàng";
    int stt = 1;
    decimal sumTotal = 0;
  //  string errorMessage = ViewBag.ErrorMessage.ToString() ?? "";
}

<div class="box box-primary">
    <div class="box-header text-right">
        <div class="btn-group">           
            <div class="btn-group">
                <button type="button" class="btn btn-sm btn-primary dropdown-toggle" data-toggle="dropdown">
                    Xử lý đơn hàng <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" role="menu">
                    <li><a href="~/Admin/Order/Accept/@Model.Order!.OrderID" onclick="return confirm('Xác nhận duyệt chấp nhận đơn hàng này?')">Duyệt đơn hàng</a></li>
                    <li><a href="~/Admin/Order/Shipping/@Model.Order.OrderID" class="btn-modal">Chuyển giao hàng</a></li>
                    <li><a href="~/Admin/Order/Finish/@Model.Order.OrderID" onclick="return confirm('Xác nhận đơn hàng đã hoàn tất thành công?')">Xác nhận hoàn tất đơn hàng</a></li>
                    <li class="divider"></li>
                    <li><a href="~/Admin/Order/Cancel/@Model.Order.OrderID" onclick="return confirm('Xác nhận hủy đơn hàng này?')">Hủy đơn hàng</a></li>
                    <li><a href="~/Admin/Order/Reject/@Model.Order.OrderID" onclick="return confirm('Xác nhận từ chối đơn hàng này?')">Từ chối đơn hàng</a></li>
                </ul>
            </div>
            <a href="~/Admin/Order/Delete/@Model.Order.OrderID" class="btn btn-sm btn-danger" onclick="return confirm('Có chắc chắn muốn xóa đơn hàng này không?')"><i class="fa fa-trash"></i> Xóa đơn hàng</a>
            <a href="~/Admin/Order" class="btn btn-sm btn-info">Quay lại</a>
        </div>
    </div>
    <div class="box-body form-horizontal">
        <div class="form-group">
            <label class="control-label col-sm-2">Mã đơn hàng:</label>
            <div class="col-sm-4">
                <p class="form-control-static">@Model.Order!.OrderID</p>
            </div>
            <label class="control-label col-sm-2">Ngày lập đơn hàng:</label>
            <div class="col-sm-4">
                <p class="form-control-static">@Model.Order.AcceptTime</p>
            </div>
            <label class="control-label col-sm-2">Nhân viên phụ trách:</label>
            <div class="col-sm-4">
                <p class="form-control-static">@Model.Order.EmployeeFullName</p>
            </div>
            <label class="control-label col-sm-2">Ngày nhận đơn hàng:</label>
            <div class="col-sm-4">
                <p class="form-control-static">@Model.Order.FinishedTime</p>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Khách hàng:</label>
            <div class="col-sm-4">
                <p class="form-control-static">@Model.Order.CustomerName</p>
            </div>
            <label class="control-label col-sm-2">Tên giao dịch:</label>
            <div class="col-sm-4">
                <p class="form-control-static">@Model.Order.CustomerContactName</p>
            </div>
            <label class="control-label col-sm-2">Địa chỉ:</label>
            <div class="col-sm-10">
                <p class="form-control-static">@Model.Order.CustomerAddress</p>
            </div>            
            <label class="control-label col-sm-2">Email:</label>
            <div class="col-sm-4">
                <p class="form-control-static">@Model.Order.CustomerEmail</p>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Địa chỉ giao hàng:</label>
            <div class="col-sm-10">
                <p class="form-control-static">@Model.Order.CustomerAddress</p>
            </div>
            <label class="control-label col-sm-2">Tỉnh/thành:</label>
            <div class="col-sm-10">
                <p class="form-control-static">Thừa Thiên Huế</p>
            </div>            
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Người giao hàng:</label>
            <div class="col-sm-4">
                <p class="form-control-static">@Model.Order.ShipperName</p>
            </div>
            <label class="control-label col-sm-2">Điện thoại:</label>
            <div class="col-sm-4">
                <p class="form-control-static">@Model.Order.ShipperPhone</p>
            </div>
            <label class="control-label col-sm-2">Nhận giao hàng lúc:</label>
            <div class="col-sm-4">
                <p class="form-control-static">@Model.Order.ShippedTime</p>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Trạng thái đơn hàng:</label>
            <div class="col-sm-4">
                <p class="form-control-static">@Model.Order.Status</p>
            </div>
            <label class="control-label col-sm-2">Thời điểm hoàn tất:</label>
            <div class="col-sm-4">
                <p class="form-control-static">@Model.Order.FinishedTime
                </p>
            </div>
        </div>
    </div>
    
    <div class="box-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <caption><h4>Danh sách mặt hàng thuộc đơn hàng</h4></caption>
                <thead>
                    <tr class="bg-primary">
                        <th class="text-center">STT</th>
                        <th class="text-center">Tên hàng</th>
                        <th class="text-center">ĐVT</th>
                        <th class="text-center">Số lượng</th>
                        <th class="text-center">Giá</th>
                        <th class="text-center">Thành tiền</th>
                        <th style="width:80px"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderDetails!)
                    {
                        sumTotal += item.TotalPrice;
                        <tr>
                            <td class="text-center">@stt</td>
                            <td>@item.ProductName</td>
                            <td class="text-center">@item.Unit</td>
                            <td class="text-center">@item.Quantity</td>
                            <td class="text-right">@item.SalePrice</td>
                            <td class="text-right">@item.TotalPrice</td>
                            <td class="text-right">
                                @*Chỉ được cập nhật hoặc xoá danh sách mặt hàng thuộc đơn hàng khi đơn hàng trong trạng thái chờ duyệt*@
                                @if (Model.Order.Status == SV20T1080029.DomainModels.OrderStatus.INIT)
                                {
                                    <a href="~/Order/EditDetail?id=@item.OrderID&productId=@item.ProductID"
                                       class="btn btn-xs btn-primary btn-modal">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a href="~/Order/DeleteDetail?id=@item.OrderID&productid=@item.ProductID" class="btn btn-xs btn-danger"
                                       onclick="return confirm('Xóa mặt hàng này khỏi đơn hàng?')">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                }
                                else
                                {
                                    <a href="javascript:;" class="btn btn-xs btn-primary"
                                       style="cursor: no-drop;" title="Chỉ được sửa khi trạng thái đơn hàng đang chờ duyệt">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a href="javascript:;" class="btn btn-xs btn-danger"
                                       style="cursor: no-drop;" title="Chỉ được xoá khi trạng thái đơn hàng đang chờ duyệt">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                }
                            </td>
                        </tr>
                        stt++;
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="5" class="text-right">Tổng cộng:</th>
                        <th class="text-right">@sumTotal</th>
                        <th></th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
<div id="dialogModal" class="modal fade" role="dialog">
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".btn-modal").click(function (e) {
                e.preventDefault();

                var link = $(this).prop("href");

                // Kiểm tra nếu link có giá trị hợp lệ
                if (link) {
                    $.ajax({
                        url: link,
                        type: "GET",
                        dataType: "html",
                        success: function (data) {
                            // Xóa nội dung cũ trước khi thêm mới
                            $("#dialogModal").empty();
                            $("#dialogModal").html(data);
                            $("#dialogModal").modal("show");
                        },
                        error: function (xhr, status, error) {
                            console.error("AJAX request failed:", status, error);
                            alert("Something went wrong! Please try again.\nStatus: " + status + "\nError: " + error);
                        }
                    });
                } else {
                    console.error("Invalid link.");
                }
            });
        });
    </script>
}
